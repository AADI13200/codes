EXPERIMENT 4


#include <stdio.h>
#include <stdlib.h>
#include <string.h>
struct node {
    int prn;
    char name[50];
    struct node *next;
};
struct node *head = NULL;
struct node *tail = NULL;
struct node* createNode(int prn, char name[]) {
    struct node *temp = (struct node*)malloc(sizeof(struct node));
    temp->prn = prn;
    strcpy(temp->name, name);
    temp->next = NULL;
    return temp;
}
void addPresident() {
    int prn;
    char name[50];
    if (head != NULL) {
        printf("\nPresident already exists!\n");
        return;
    }
    printf("Enter PRN and Name of President: ");
    scanf("%d", &prn);
    scanf(" %[^\n]", name);
    head = createNode(prn, name);
    tail = head;
    printf("President added.\n");
}
void addSecretary() {
    int prn;
    char name[50];
    if (head == NULL) {
        printf("\nAdd President first!\n");
        return;
    }
    if (tail != head) {
        printf("\nSecretary already exists!\n");
        return;
    }
    printf("Enter PRN and Name of Secretary: ");
    scanf("%d", &prn);
    scanf(" %[^\n]", name);
    struct node *temp = createNode(prn, name);
    head->next = temp;
    tail = temp;
    printf("Secretary added.\n");
}
void addMember() {
    int prn;
    char name[50];
    if (head == NULL || tail == NULL) {
        printf("\nAdd President and Secretary first!\n");
        return;
    }
    printf("Enter PRN and Name of Member: ");
    scanf("%d", &prn);
    scanf(" %[^\n]", name);
    struct node *temp = createNode(prn, name);
    struct node *p = head;
    while (p->next != tail)
        p = p->next;
    temp->next = tail;
    p->next = temp;
    printf("Member added.\n");
}
void deletePresident() {
    if (head == NULL) {
        printf("\nNo President!\n");
        return;
    }
    struct node *temp = head;
    head = head->next;
    free(temp);
    printf("President deleted.\n");
}
void deleteSecretary() {
    if (head == NULL || head->next == NULL) {
        printf("\nNo Secretary!\n");
        return;
    }
    struct node *p = head;
    while (p->next != tail)
        p = p->next;
    free(tail);
    tail = p;
    tail->next = NULL;
    printf("Secretary deleted.\n");
}
void deleteMember() {
    if (head == NULL || head->next == NULL || head->next == tail) {
        printf("\nNo members to delete!\n");
        return;
    }
    int prn;
    printf("Enter PRN of Member to delete: ");
    scanf("%d", &prn);
    struct node *p = head;
    struct node *q = head->next;
    while (q != tail && q->prn != prn) {
        p = q;
        q = q->next;
    }
    if (q == tail) {
        printf("\nMember with PRN %d not found!\n", prn);
        return;
    }
    p->next = q->next;
    free(q);
    printf("Member deleted successfully.\n");
}
void display() {
    struct node *p = head;
    if (p == NULL) {
        printf("\nNo Members in Club!\n");
        return;
    }
    printf("\n--- Club Members ---\n");
    while (p != NULL) {
        printf("%d  %s\n", p->prn, p->name);
        p = p->next;
    }
}
void countMembers() {
    int count = 0;
    struct node *p = head;
    while (p != NULL) {
        count++;
        p = p->next;
    }
    printf("\nTotal Members: %d\n", count);
}
int main() {
    int ch;
    while (1) {
        printf("\n--- Pinnacle Club Menu ---\n");
        printf("1. Add President\n");
        printf("2. Add Secretary\n");
        printf("3. Add Member\n");
        printf("4. Delete President\n");
        printf("5. Delete Secretary\n");
        printf("6. Delete Member\n");
        printf("7. Display Members\n");
        printf("8. Count Members\n");
        printf("9. Exit\n");
        printf("Enter choice: ");
        scanf("%d", &ch);
        switch (ch) {
            case 1: addPresident(); break;
            case 2: addSecretary(); break;
            case 3: addMember(); break;
            case 4: deletePresident(); break;
            case 5: deleteSecretary(); break;
            case 6: deleteMember(); break;
            case 7: display(); break;
            case 8: countMembers(); break;
            case 9: printf("\nExiting...\n"); exit(0);
            default: printf("\nInvalid choice!\n");
        }
    }
    return 0;
}
