EXPERIMENT 7


#include <stdio.h>
#define MAX 5   // Maximum number of orders

int queue[MAX];
int front = -1, rear = -1;

// Function to add order
void addJob(int order) {
    if (rear == MAX - 1) {
        printf("Queue full! Cannot take more orders.\n");
        return;
    }
    if (front == -1)
        front = 0;
    rear++;
    queue[rear] = order;
    printf("Order %d added successfully.\n", order);
}

// Function to delete order
void deleteJob() {
    if (front == -1 || front > rear) {
        printf("No pending orders!\n");
        return;
    }
    printf("Order %d served.\n", queue[front]);
    front++;
    if (front > rear)
        front = rear = -1;
}

// Function to display orders
void display() {
    if (front == -1)
        printf("No orders in queue.\n");
    else {
        printf("Pending Orders: ");
        for (int i = front; i <= rear; i++)
            printf("%d ", queue[i]);
        printf("\n");
    }
}

int main() {
    int choice, order;

    while (1) {
        printf("\n--- PIZZA PARLOR JOB QUEUE ---\n");
        printf("1. Add Order\n");
        printf("2. Serve Order\n");
        printf("3. Display Orders\n");
        printf("4. Exit\n");
        printf("Enter choice: ");
        scanf("%d", &choice);

        switch (choice) {
            case 1:
                printf("Enter order number: ");
                scanf("%d", &order);
                addJob(order);
                break;
            case 2:
                deleteJob();
                break;
            case 3:
                display();
                break;
            case 4:
                return 0;
            default:
                printf("Invalid choice!\n");
        }
    }
}
